{
  "version": "3.3",
  "services": {
    "prixfixe-server": {
      "environment": {
        "CONFIGURATION_FILEPATH": "config_files/integration-tests-sqlite.toml",
        "DOCKER": "true"
      },
      "ports": [
        "80:8888"
      ],
      "build": {
        "context": "../",
        "dockerfile": "dockerfiles/integration-server.Dockerfile"
      }
    },
    "test": {
      "environment": {
        "DOCKER": "true",
        "TARGET_ADDRESS": "http://prixfixe-server:8888"
      },
      "links": [
        "prixfixe-server"
      ],
      "build": {
        "context": "../",
        "dockerfile": "dockerfiles/integration-tests.Dockerfile"
      }
    }
  }
}