        <!-- Define our custom elements -->
        <script>
            customElements.define('enumeration-search',
                class extends HTMLElement {
                    constructor() {
                        super();

                        const userFacingInput = document.createElement('input');
                        const internalInput = document.createElement('input');
                        const shadowRoot = this.attachShadow({mode: 'open'});

                        internalInput.name = this.getAttribute("name");
                        internalInput.hidden = true;

                        const searchURL = this.getAttribute("search-url");

                        shadowRoot.appendChild(userFacingInput);
                        shadowRoot.appendChild(internalInput);

                        userFacingInput.addEventListener('keyup', performSearch);

                        function performSearch() {
                            const currentQuery = userFacingInput.value;

                            if (currentQuery.length !== 0) {

                                var xhr = new XMLHttpRequest();
                                xhr.onreadystatechange = function() {};
                                xhr.open('GET', `${searchURL}?q=${currentQuery}`);
                                xhr.onreadystatechange = function() {
                                    if (xhr.readyState === 4){
                                        console.dir(JSON.parse(xhr.responseText));
                                    }
                                };
                                xhr.send()
                            }
                        }
                    };
                },
            );
        </script>

