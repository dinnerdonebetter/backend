<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Valid Ingredients</h1>
    
    <button class="btn btn-primary" hx-target="#content" hx-push-url="/valid_ingredients/new" hx-get="/dashboard_pages/valid_ingredients/new">New</button>
    
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Variant</th>
        <th>Description</th>
        <th>Warning</th>
        <th>ContainsEgg</th>
        <th>ContainsDairy</th>
        <th>ContainsPeanut</th>
        <th>ContainsTreeNut</th>
        <th>ContainsSoy</th>
        <th>ContainsWheat</th>
        <th>ContainsShellfish</th>
        <th>ContainsSesame</th>
        <th>ContainsFish</th>
        <th>ContainsGluten</th>
        <th>AnimalFlesh</th>
        <th>AnimalDerived</th>
        <th>Volumetric</th>
        <th>IconPath</th>
        <th>Last Updated On</th>
        <th>Created On</th>
    </tr>
    </thead>
    <tbody>{{ range $i, $x := .ValidIngredients }}
    <tr>
        <td><button class="btn btn-sm btn-outline-dark" hx-push-url="{{ pushURL . }}" hx-get="{{ individualURL . }}" hx-target="#content">{{ $x.ID }}</button></td>
        <td>{{ $x.Name }}</td>
        <td>{{ $x.Variant }}</td>
        <td>{{ $x.Description }}</td>
        <td>{{ $x.Warning }}</td>
        <td>{{ $x.ContainsEgg }}</td>
        <td>{{ $x.ContainsDairy }}</td>
        <td>{{ $x.ContainsPeanut }}</td>
        <td>{{ $x.ContainsTreeNut }}</td>
        <td>{{ $x.ContainsSoy }}</td>
        <td>{{ $x.ContainsWheat }}</td>
        <td>{{ $x.ContainsShellfish }}</td>
        <td>{{ $x.ContainsSesame }}</td>
        <td>{{ $x.ContainsFish }}</td>
        <td>{{ $x.ContainsGluten }}</td>
        <td>{{ $x.AnimalFlesh }}</td>
        <td>{{ $x.AnimalDerived }}</td>
        <td>{{ $x.Volumetric }}</td>
        <td>{{ $x.IconPath }}</td>
        <td>{{ relativeTimeFromPtr $x.LastUpdatedOn }}</td>
        <td>{{ relativeTime $x.CreatedOn }}</td>
        <td><button class="btn btn-sm btn-danger" hx-target="closest tr" hx-confirm="Are you sure you want to delete this?" hx-delete="{{ individualURL . }}">Delete</button></td>
    </tr>
    {{ end }}</tbody>
</table>